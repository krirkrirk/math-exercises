{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["ES2021"],
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "#root/*": ["./*"]
    },
    "moduleSuffixes": [],
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
